
<%= render 'sidebar' %>

          <div class="icone-page"><img src="/images/historique.png"></div>
          <h1>Historique</h1></div>

<%= render 'navbar' %>


  <p>Historique des modifications</p>    
<%= link_to 'Ajouter une modification', new_event_path %>
  <div id="conteneur-etiquette">
    <% @events.each do |event| %>
      <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary"><%= event.date %></h6>
                  <div class="dropdown no-arrow">
                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                      <div class="dropdown-header">Dropdown Header:</div>
                      <a class="dropdown-item" href="#"><%= link_to 'Voir', event %></a>
                      <a class="dropdown-item" href="#"><%= link_to 'Modifier', edit_event_path(event) %></a>
                      <div class="dropdown-divider"></div>
                      <a class="dropdown-item" href="#"><%= link_to 'Supprimer', event, :method => :delete, data: { confirm: 'Êtes-vous sûr?' } %></a>
                    </div>
                  </div>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                  <%= event.titre %>
            <%= event.commentaire %>
                </div>
              </div>
            
            
            
        
        



        
        
      
    <% end %></div>
  




<%= render 'footer' %>


