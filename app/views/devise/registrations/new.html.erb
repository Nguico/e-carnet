<div class="wrapper">
  <div class="container">

    <div class="logo"></div>

     <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", placeholder: 'Adresse e-mail'}%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password", placeholder: 'Mot de passe' } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password", placeholder: 'Confirmer le mot de passe' } %>
          <br><center>
     <%= f.submit "Valider", :class => 'bouton' %>
     <% end %>
     <div class="separateur"></div>
     <%= link_to new_user_session_path do %>
     <div class="bouton" style="background-color:#2BC4BE;color:white;">Se connecter</div>
     <% end %>

  </div>

</div>
